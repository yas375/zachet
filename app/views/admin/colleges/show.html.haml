- render :layout => 'admin/colleges/layout' do
  %h2.title= @college.name
  .inner
    %p
      = link_to root_url(:subdomain => @college.subdomain), root_url(:subdomain => @college.subdomain)
    .wat-cf
      = link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Редактировать информацию")} Редактировать информацию".html_safe, edit_college_path(@college), :class => "button"
      = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Удалить ВУЗ")} Удалить ВУЗ".html_safe, college_path(@college), :method => "delete", :class => "button", :confirm => "Уверен?"

.block
  .content
    .inner
      %h3 Предметы
      - d_count = @college.disciplines.count
      %p= link_to "#{d_count} #{Russian.p(d_count, 'предмет', 'предмета', 'предметов')}", college_disciplines_path(@college)
      .wat-cf
        = link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Добавить предмет")} Добавить предмет".html_safe, new_college_discipline_path(@college), :class => "button"

.block
  .content
    .inner
      %h3 Факультеты
      - d_count = @college.faculties.count
      %p= link_to "#{d_count} #{Russian.p(d_count, 'факультет', 'факультета', 'факультетов')}", college_faculties_path(@college)
      .wat-cf
        = link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Добавить факультет")} Добавить факультет".html_safe, new_college_faculty_path(@college), :class => "button"
