.block
  .secondary-navigation
    = render_navigation(:context => :admin, :level => 2)
    .clear
  .content
    %h2.title Факультеты
    .inner
      %table.table
        %tr
          %th Название
          %th Аббревиатура
          %th.last
            &nbsp;
        - @faculties.each do |faculty|
          %tr
            %td= faculty.name
            %td= faculty.abbr
            %td.last
              = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_college_faculty_path(faculty.college, faculty)
              |
              = link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_college_faculty_path(faculty.college, faculty), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      
      .actions-bar.wat-cf
        .actions
          .create_button
            = link_to "#{image_tag 'web-app-theme/tick.png'} Добавить факультет", new_admin_college_faculty_path, :class => 'button'
            .clear
