
  <div class="group">
    <%= f.label :title, t("activerecord.attributes.newsitem.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :body, t("activerecord.attributes.newsitem.body", :default => "Body"), :class => :label %>
    <%= f.text_area :body, :class => 'text_area' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :published, t("activerecord.attributes.newsitem.published", :default => "Published"), :class => :label %>
    <%= f.check_box :published, :class => 'check_box' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :college_ids, 'ВУЗы', :class => :label %>
