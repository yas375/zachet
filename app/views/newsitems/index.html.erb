<h1>Listing newsitems</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>College</th>
    <th>User</th>
    <th>Published</th>
  </tr>

<% @newsitems.each do |newsitem| %>
  <tr>
    <td><%=h newsitem.title %></td>
    <td><%=h newsitem.body %></td>
    <td><%=h newsitem.colleges if newsitem.colleges %></td>
    <td><%=h newsitem.author %></td>
    <td><%=h newsitem.published %></td>
    <td><%= link_to 'Show', newsitem %></td>
    <td><%= link_to 'Edit', edit_newsitem_path(newsitem) %></td>
    <td><%= link_to 'Destroy', newsitem, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New newsitem', new_newsitem_path %>