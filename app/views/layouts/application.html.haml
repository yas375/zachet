!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application'
    = formtastic_stylesheet_link_tag
    = yield(:head)
  %body
    = render_navigation(:context => :user, :level => 1)
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      - if show_title?
        %h1= h yield(:title)
      = "sub: #{current_subdomain} ; domain: #{current_domain}"
      %table.news
        %tr
          %td= render_cell :news, :global, {:without_first => true}
          %td= render_cell :news, :local
      = yield
