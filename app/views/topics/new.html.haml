- title "Новый топик"

%h3= "форум: #{@topic.forum.title}"
- semantic_form_for [@topic.forum, @topic] do |f|
  = f.error_messages
  - f.inputs do
    = f.input :subject
    = f.input :sticky, :required => false
    = f.input :locked, :required => false
  - semantic_fields_for @post do |p|
    - p.inputs do
      = p.input :text
  = f.buttons
