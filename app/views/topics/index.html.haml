- title "Topics"

%table
  %tr
    %th Forum
    %th Subject
    %th Author
    %th Last post
  - for topic in @topics
    %tr
      %td= h topic.forum
      %td= h topic.subject
      %td= h topic.author_id
      %td= h topic.last_post_id
      %td= link_to 'Show', topic
      %td= link_to 'Edit', edit_topic_path(topic)
      %td= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Topic", new_topic_path
